@model OriginWeb.VM.Employee.EmployeesVM

<form id="form-Employee">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Modal title</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <p>Modal body text goes here.</p>
                <p>
                    Employee Id：
                    @if (Model.EmployeeID > 0)
                    {
                        @Model.EmployeeID
                        @Html.HiddenFor(m => m.EmployeeID)
                    }
                    else
                    {
                        <span>自動編號</span>
                    }
                </p>
                <p>
                    <span style="color: red;">*</span>LastName：@Html.TextBoxFor(m => m.LastName)
                </p>
                <p>
                    <span style="color: red;">*</span>FirstName：@Html.TextBoxFor(m => m.FirstName)
                </p>
                <p>
                    Title：@Html.TextBoxFor(m => m.Title)
                </p>
                <p>
                    TitleOfCourtesy：@Html.TextBoxFor(m => m.TitleOfCourtesy)
                </p>
            </div>
            <div class="modal-footer">
                @if (Model.EmployeeID == 0)
                {
                    <button type="button" class="btn btn-primary" onclick="Add()">Save changes</button>
                }
                else
                {
                    <button type="button" class="btn btn-primary" onclick="Edit()">Save changes</button>
                }
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</form>